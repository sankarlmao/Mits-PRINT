generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url      = env("DATABASE_URL")
}

//enumerators


enum ColorMode { 
  COLOR
  BLACK_WHITE
}

enum Orientation {
  LANDSCAPE
  PORTRAIT
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

enum PrintStatus  {
  PENDING
  PRINTING
  PRINTED
}

enum PrintRange {
  ALL
  EVEN
  ODD
  CUSTOM
}



//MODELS

model Account {
  id                String  @id @default(uuid())
  studentId         String
  student           Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  type              String
  provider          String
  providerAccountId String

  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  @@unique([provider, providerAccountId])
}


model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  studentId    String
  student      Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  expires      DateTime
}



model Student {
  id  String @id @default(cuid())
  email String @unique 
  name String 
  password String

  //orders array
  orders Order[]


  // NextAuth relations
  accounts      Account[]
  sessions      Session[]


  payments Payment[]
  createdAt DateTime @default(now())

  
}


//Print


model Print {
  id String @id @default(cuid())
  fileUrl String
  copies Int @default(1)
  colorMode ColorMode
  orientation Orientation @default(PORTRAIT)
  printOnBothSides Boolean @default(false)

  pageRange PrintRange @default(ALL)
  customRange String? 

  orderId String
  order Order @relation(fields: [orderId], references: [id])

  createdAt DateTime @default(now())
  

  @@index([orderId])


}



model Order {

  id String @id @default(cuid())
  otpCode String
  status PrintStatus @default(PENDING)
  studentId String
  student Student @relation(fields: [studentId],references: [id])
  paymentStatus PaymentStatus @default(PENDING)
  prints Print[]

  //payment
  payment Payment?

  createdAt DateTime @default(now())

  @@index([studentId])
  @@index([otpCode])
}


  model Payment {
    
    id String @id @default(cuid())
    amount  Int //store as paisa  (10.25 as 1025)
    currency String @default("INR")
    status PaymentStatus @default(PENDING)



    orderId String @unique
    order Order @relation(fields: [orderId] ,references: [id])

    //razorpay fields
    razorpayOrderId  String @unique
    razorpayPaymentId String?
    method String?

    verified Boolean @default(false)
    //Student
    studentId String
    student Student @relation(fields: [studentId], references: [id])

    
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt


    @@index([razorpayOrderId])
  }



enum PrinterStatus {
  OFF
  READY
  OUT_OF_PAPER
  ERROR
}


model Printer{
  id String @id @unique
  name String 
  status PrinterStatus @default(READY)
  reason String?
  type ColorMode 
  updatedAt DateTime @updatedAt
}